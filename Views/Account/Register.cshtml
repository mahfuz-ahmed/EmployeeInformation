@model EmployeeInfo.Models.ViewModels.RegisterViewModel

@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Register";
}

<div class="text-center mb-4">
    <div class="display-4 text-success mb-2">
        <i class="bi bi-person-plus"></i>
    </div>
    <h2 class="fw-bold">Create Account</h2>
    <p class="text-muted">Join our employee management system</p>
</div>

<form asp-action="Register" method="post" id="registerForm">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    
    <div class="form-floating mb-3">
        <input asp-for="Email" class="form-control" placeholder="name@example.com" />
        <label asp-for="Email">Email address</label>
        <span asp-validation-for="Email" class="text-danger small"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
        <label asp-for="Password">Password</label>
        <span asp-validation-for="Password" class="text-danger small"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
        <label asp-for="ConfirmPassword">Confirm Password</label>
        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-success btn-lg" id="registerBtn">Register</button>
    </div>

    <div class="text-center mt-4">
        <p class="text-muted small">Already have an account? <a asp-action="Login" class="text-decoration-none fw-bold">Login here</a></p>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
