@model EmployeeInfoVM

@{
    ViewData["Title"] = "Add New Employee";
}

<div class="container mt-4">
    <h2>Add Employee</h2>
    <form asp-action="Create" method="post" id="createForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-md-6 form-group mb-3">
                <label asp-for="Title" class="control-label mb-1"></label>
                <select asp-for="Title" id="TitleDropdown" class="form-select">
                    <option value="">-- Select Title --</option>
                    <option value="Mr.">Mr.</option>
                    <option value="Mrs.">Mrs.</option>
                </select>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="col-md-6 form-group mb-3">
                <label asp-for="Gender" class="control-label mb-1"></label>
                <input asp-for="Gender" id="GenderField" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 form-group mb-3">
                <label asp-for="FirstName" class="control-label mb-1"></label>
                <input asp-for="FirstName" id="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group mb-3">
                <label asp-for="LastName" class="control-label mb-1"></label>
                <input asp-for="LastName" id="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 form-group mb-3">
                <label asp-for="Email" class="control-label mb-1"></label>
                <input asp-for="Email" id="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group mb-3">
                <label asp-for="PhoneNumber" class="control-label mb-1"></label>
                <input asp-for="PhoneNumber" id="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 form-group mb-3">
                <label asp-for="DesignationId" class="control-label mb-1"></label>
                <select asp-for="DesignationId" asp-items="ViewBag.Designations" id="DesignationId" class="form-select">
                    <option value="">-- Select Designation --</option>
                </select>
                <span asp-validation-for="DesignationId" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group mb-3">
                <label asp-for="SalaryId" class="control-label mb-1"></label>
                <select asp-for="SalaryId" asp-items="ViewBag.Salaries" id="SalaryId" class="form-select">
                    <option value="">-- Select Basic Salary --</option>
                </select>
                <span asp-validation-for="SalaryId" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6 form-group mb-3">
            <label asp-for="JoiningDate" class="control-label mb-1"></label>
            <input asp-for="JoiningDate" id="JoiningDate" class="form-control" type="date" />
            <span asp-validation-for="JoiningDate" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a href="/EmployeeInfo/Index" class="btn btn-secondary">Back to List</a>
            <button type="button" class="btn btn-warning" onclick="clearForm()">Clear</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            // Handle Title Change for Auto-Gender
            $("#TitleDropdown").change(function() {
                var title = $(this).val();
                var genderBox = $("#GenderField");
                
                if (title === 'Mr.') {
                    genderBox.val('Male');
                } else if (title === 'Mrs.' || title === 'Ms.') {
                    genderBox.val('Female');
                }
            });
        });

        function clearForm() {
            // Reset the form using native DOM method to clear standard inputs
            $('#createForm')[0].reset();
            
            // Manually clear read-only/hidden fields if needed
            $("#GenderField").val("");
            
            // Clear Validation Errors
            $(".field-validation-error").text("");
            $(".input-validation-error").removeClass("input-validation-error");
        }
    </script>
}
